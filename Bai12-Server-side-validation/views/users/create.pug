extends ../layout/common.pug
block content
    h1 users
    if errors
        each error in errors
            .alert.alert-danger=error
        
    form( action ="/users/create",method="POST")
        .form-group
            label(for='name') name
            input#name.form-control(type="text", name="name" value=values?values.name:'')
        .form-group
            label(for='phone') phone
            input#phone.form-control(type="number", name="phone" value=values?values.phone:'')
        button(class="btn btn-primary ml-2") create